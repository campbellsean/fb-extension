{
  "manifest_version": 2,

  "name": "Facebook Customization Tool",
  "description": "Understand your browsing history and reduce the amount of time spent on Facebook.",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      },
      {
        "matches": ["http://www.facebook.com/*", "https://www.facebook.com/*","http://web.facebook.com/*","https://web.facebook.com/*"],
        "js": ["js/removefeed.js"],
        "css": ["style.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["http://www.facebook.com/*", "https://www.facebook.com/*","http://web.facebook.com/*","https://web.facebook.com/*"],
        "js": ["js/removefeed.js"],
        "css": ["style.css"],
        "run_at": "document_idle"
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>",
    "http://www.facebook.com/*",
		"https://www.facebook.com/*",
		"http://web.facebook.com/*",
		"https://web.facebook.com/*"
  ]
}